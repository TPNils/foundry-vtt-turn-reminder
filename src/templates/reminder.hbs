<div>
  <h3>{{localize "turn-reminder.reminder"}}</h3>
</div>

<table class="reminder">
  {{#each reminders as |reminder reminderKey|}}
    <tr class="reminder-group" style="cursor: pointer;">
      <td class="reminder-group-checkbox"><input type="checkbox" id="turn-reminder-{{reminderKey}}" onchange="event.target.checked ? event.target.parentElement.parentElement.classList.add('done') : event.target.parentElement.parentElement.classList.remove('done')"/></td>
      <td colspan="2">
        <label class="reminder-group-label" for="turn-reminder-{{reminderKey}}">{{reminder.label}}</label>

        {{#each reminder.actions as |action actionKey|}}
          <div class="reminder-action" id="{{action.id}}">
            <div class="reminder-action-image" style="background-image: url('{{action.image}}')"></div>
            {{action.name}}
          </div>
        {{/each}}

      </td>
    </tr>
  {{/each}}
</table>